{
  "name": "Pandemic Crisis Belief Evolution",
  "description": "Study belief dynamics during pandemic crisis with time-varying parameters",
  "experiment_type": "dynamic_evolution",
  
  "num_agents": 120,
  "topic": "healthcare",
  "num_rounds": 25,
  "interactions_per_round": 360,
  
  "crisis_scenario": "pandemic",
  "crisis_severity": 0.8,
  
  "belief_history_tracking": true,
  "sample_interval": 1,
  "phase_detection_threshold": 0.12,
  
  "optimize_intervention_timing": true,
  "intervention_type": "fact_check",
  "intervention_candidates": [5, 8, 12, 15, 18],
  
  "network_config": {
    "network_type": "small_world",
    "homophily_strength": 0.7,
    "average_connections": 6,
    "dynamic_rewiring": true,
    "bridge_probability": 0.05
  },
  
  "derivative_epsilon": 0.1,
  "trajectory_smoothing": 0.05,
  
  "save_detailed_history": true,
  "save_network_snapshots": true,
  "output_directory": "results/dynamic_pandemic",
  "random_seed": 42
}